{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
